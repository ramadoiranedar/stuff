<div class="container mt-3">
    <div class="row">
        <div class="col-md-8">
            <h2>Detail Contact</h2>
            <% if (!contact) { %>
                <div class="alert alert-danger text-center" role="alert">
                    Oops.. Contact not in listed. <a href="/contact" class="alert-link"> &laquo; Back to Contact Page</a>
                </div>
            <% } else { %> 
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title"><%= contact.name %></h5>
                        <h6 class="card-subtitle mb-2 text-muted"><%= contact.phone %></h6>
                        <p class="card-text"><%= contact.email %> </p>
                        <a href="/contact/delete/<%= contact.email  %> " class="btn btn-danger badge" onclick="confirm('Are you sure?');">Delete</a>
                        <a href="/contact/edit/<%= contact.email  %> " class="btn btn-info badge">Edit</a>
                        <a href="/contact" class="card-link d-block mt-3">&laquo; Back to Contact Page</a>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</div>